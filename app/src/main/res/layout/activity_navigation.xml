<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"

    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--android:background="@color/c3"-->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
            />
        <!--android:background="@color/c3"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">


        <androidx.cardview.widget.CardView
                android:id="@+id/installInventory"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="clip_horizontal"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
            android:layout_weight="1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/datainfo" />
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/scannerInventory"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="clip_horizontal"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/generator" />
            </androidx.cardview.widget.CardView>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="320dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/locateInventory"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="clip_horizontal"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/location" />
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/groupChat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="clip_horizontal"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/scanner" />
            </androidx.cardview.widget.CardView>




        </LinearLayout>




    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/menu_item"
        app:headerLayout="@layout/header"
        android:layout_gravity="start"
        app:itemTextColor="#fff"/>
    <!--android:background="@color/c3"-->



</androidx.drawerlayout.widget.DrawerLayout>
